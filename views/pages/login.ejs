<%- include ('../partials/header') %>

<main>
  <div class="p-4 flex flex-row">
    <button class="text-2xl font-semibold">UniSpot</button>
   
  </div>
  <div class="my-24 mx-auto flex flex-col max-w-xl">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <p class="font-semibold text-3xl p-4 mx-auto mb-4">Log in to UniSpot</p>
    <form action="/login" method="post" class="bg-stone-100 p-4 rounded-xl m-auto ">
      <div class="form-group">
        <label for="username">Username</label>
        <br/>
        <input type="text" class="p-1 mt-2 rounded" id="username" name="username" >
      </div>
      <div class="form-group my-4">
        <label for="password">Password</label>
        <br/>
        <input type="password" class="p-1 mt-2 rounded" id="password" name="password">
      </div>
      <button type="submit" class="btn btn-success py-2 flex m-auto">Login</button>
      
    </form>
    <a href="/register" class="underline mt-4 text-center mx-auto">Don't have an account? Register here.</a>

  </div>
</main>

